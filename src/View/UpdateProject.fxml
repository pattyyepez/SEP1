<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.UpdateProjectController">
   <children>
      <Label text="Project expenses and hours">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </VBox.margin>
      </Label>
      <VBox alignment="BOTTOM_CENTER" prefHeight="150.0" prefWidth="300.0" spacing="20.0">
         <children>
            <Label text="How many man hours have you spent on the project today?" textAlignment="CENTER" wrapText="true">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="hoursField" prefHeight="25.0" prefWidth="377.0" />
         </children>
         <padding>
            <Insets bottom="25.0" left="20.0" right="20.0" />
         </padding>
      </VBox>
      <VBox alignment="TOP_CENTER" prefHeight="150.0" prefWidth="300.0" spacing="20.0">
         <children>
            <Label text="How many expenses have you spent on the project today?" textAlignment="CENTER" wrapText="true">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="expensesField" />
         </children>
         <padding>
            <Insets left="20.0" right="20.0" top="25.0" />
         </padding>
      </VBox>
      <HBox alignment="CENTER" prefHeight="44.0" prefWidth="300.0" spacing="25.0">
         <children>
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleActions" text="Cancel" />
            <Button fx:id="applyButton" mnemonicParsing="false" onAction="#handleActions" text="Apply" />
         </children>
      </HBox>
   </children>
</VBox>
