<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="350.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.ProjectInfoController">
   <children>
      <HBox prefHeight="310.0" prefWidth="640.0">
         <children>
            <VBox alignment="TOP_CENTER" prefHeight="180.0" prefWidth="180.0" spacing="12.0">
               <children>
                  <ComboBox fx:id="typeCombo" onAction="#updateFields" prefWidth="150.0">
                     <VBox.margin>
                        <Insets bottom="20.0" top="20.0" />
                     </VBox.margin>
                     
                  </ComboBox>
                  <Label text="Customer information">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="55.0" />
                     </VBox.margin>
                  </Label>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <VBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="60.0" spacing="30.0">
                           <children>
                              <Label text="Name*" />
                              <Label text="Phone*" />
                              <Label text="Email*" />
                           </children>
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                           <padding>
                              <Insets right="10.0" />
                           </padding>
                        </VBox>
                        <VBox prefHeight="109.0" prefWidth="114.0" spacing="22.0">
                           <children>
                              <TextField fx:id="customerName" prefWidth="100.0" />
                              <TextField fx:id="customerPhone" prefWidth="100.0" />
                              <TextField fx:id="customerEmail" prefWidth="100.0" />
                           </children>
                        </VBox>
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </HBox>
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </VBox>
            <VBox alignment="CENTER" prefHeight="310.0" prefWidth="230.0">
               <children>
                  <Label text="General project information">
                     <VBox.margin>
                        <Insets top="15.0" />
                     </VBox.margin>
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <HBox prefHeight="250.0" prefWidth="230.0">
                     <children>
                        <VBox alignment="CENTER_RIGHT" prefHeight="250.0" prefWidth="77.0" spacing="16.0">
                           <children>
                              <Label text="Title*">
                                 <VBox.margin>
                                    <Insets bottom="10.0" />
                                 </VBox.margin>
                              </Label>
                              <Label text="Address*">
                                 <VBox.margin>
                                    <Insets />
                                 </VBox.margin>
                              </Label>
                              <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" text="Budget&#10;minimum" textAlignment="CENTER">
                                 <VBox.margin>
                                    <Insets />
                                 </VBox.margin>
                              </Label>
                              <Label text="Budget&#10;maximum" textAlignment="CENTER">
                                 <VBox.margin>
                                    <Insets />
                                 </VBox.margin>
                              </Label>
                              <Label text="Timeline">
                                 <VBox.margin>
                                    <Insets />
                                 </VBox.margin>
                              </Label>
                           </children>
                           <padding>
                              <Insets right="10.0" />
                           </padding>
                        </VBox>
                        <VBox alignment="CENTER_LEFT" prefHeight="240.0" prefWidth="138.0" spacing="18.0">
                           <children>
                              <TextField fx:id="projectTitle" />
                              <TextField fx:id="projectAddress" />
                              <TextField fx:id="projectBudgetMin">
                                 <VBox.margin>
                                    <Insets bottom="5.0" />
                                 </VBox.margin>
                              </TextField>
                              <TextField fx:id="projectBudgetMax" />
                              <TextField fx:id="projectTimeline" />
                           </children>
                        </VBox>
                     </children>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="310.0" prefWidth="230.0">
               <children>
                  <Label text="Specific project information">
                     <VBox.margin>
                        <Insets top="15.0" />
                     </VBox.margin>
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <HBox prefHeight="250.0" prefWidth="230.0">
                     <children>
                        <VBox fx:id="projectSpecificLabelPane" alignment="CENTER_RIGHT" prefHeight="310.0" prefWidth="115.0" spacing="20.0">
                           <padding>
                              <Insets right="10.0" />
                           </padding>
                        </VBox>
                        <VBox fx:id="projectSpecificFieldPane" alignment="CENTER_LEFT" prefHeight="250.0" prefWidth="100.0" spacing="22.0" />
                     </children>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </HBox>
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="40.0" prefWidth="200.0" spacing="50.0">
         <children>
            <Label text="*Must be filled out." textFill="RED">
               <HBox.margin>
                  <Insets left="-240.0" right="85.0" />
               </HBox.margin>
            </Label>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleActions" text="Back" />
            <Button fx:id="actionButton" mnemonicParsing="false" onAction="#handleActions" text="Create" />
         </children>
      </HBox>
   </children>
</VBox>
